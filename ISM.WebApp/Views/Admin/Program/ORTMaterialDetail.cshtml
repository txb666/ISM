@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;
@using ISM.WebApp.Constant;
@using ISM.WebApp.Utils
@{
    var sessionUser = JsonConvert.DeserializeObject<Account>(Context.Session.GetString(LoginConst.SessionKeyName));
    if (sessionUser.role_name == "Admin")
    {
        ViewData["Title"] = "Transportation Page";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else if (sessionUser.role_name == "Staff")
    {
        ViewData["Title"] = "Transportation Page";
        Layout = "~/Views/Shared/_StaffLayout.cshtml";
    }
}
@model ISM.WebApp.ViewModels.ORTMaterialsDetailViewModel
@*<div style="height: 500px; background-color: white;">*@
<h1 style="text-align: center;"> ORT Materials For Student Group: @(Model.current_student_group.program_name + "_" + Model.current_student_group.campus_name + "_" + Model.current_student_group.duration_start.ToString("dd/MM/yyyy") + "-" + Model.current_student_group.duration_end.ToString("dd/MM/yyyy") + "_" + Model.current_student_group.home_university)  </h1>
<div style="height:50px">
    <div class="dropdown_search">
        <button onclick="search_visa()" class="btn btn-primary">Search</button>
        <div id="myDropdown_search" class="dropdown-content_search" style="height: 400px; margin-top: 10px;">
            <form style="width: 320px;" id="searchForm" asp-controller="ORTMaterials" asp-action="Detail" method="get">              
                <div class="form-group row">
                    <label style="margin-left: 30px; font-weight: bold; width:100px;">Content</label>
                    <input name="content" type="text" style="width: 200px; border-radius: 5px;" id="" value="@Model.content">
                </div>
                <div class="form-group row">
                    <label style="margin-left: 30px; font-weight: bold; width:100px;">Note</label>
                    <input name="note" type="text" style="width: 200px; border-radius: 5px;" id="" value="@Model.note">
                </div>             
                <input type="hidden" name="student_group_id" id="search_student_group_id" value="@Model.current_student_group.studentGroup_id" />
                <input type="hidden" name="page" id="inputPage">
                <button id="searchBtn" type="submit" onclick="search(1);" class="btn btn-info" style="margin-left: 150px;">Search</button>
            </form>
        </div>
    </div>
</div>
<button onclick="showPopup('xmas-popup')" style="float: right;" class="btn btn-success">
    Create
</button>
<br>
<br>
<div class="table-scroll">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Content</th>
                <th scope="col">Note</th>
                <th> </th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            @for(int i=0;i<Model.materials.Count;i++)                
            {
            <tr>
                <td>
                    @(i+1)
                </td>
                <td>
                    @Model.materials[i].content
                </td>
                <td>
                    @Model.materials[i].note
                </td>
                <td style="text-align: center;">
                    <button onclick="EditORTMaterials('@Model.materials[i].ort_materials_id','@Model.materials[i].content','@Model.materials[i].note'); showPopup('xmas-popup-assign1');" class="btn btn-info">
                        Edit
                    </button>
                </td>
                <td style="text-align: center;">
                    <button onclick="deleteORTMaterials('@Model.materials[i].ort_materials_id')" class="btn btn-info">
                        Delete
                    </button>
                </td>
            </tr>
            }
        </tbody>
    </table>
    <!-- popup code -->
    <div id="xmas-popup" class="popup" href="#">
        <div class="popup-content" style="height:500px">
            <form id="editTransportationForm">
                <h1 style="text-align: center; margin-bottom: 40px;">Create ORT Materials</h1>
                <input type="hidden" id="create_student_group_id" value="@Model.current_student_group.studentGroup_id">              
                <div class="form-group row">
                    <label style="margin-left: 30px; font-weight: bold; width:100px;">Content:</label>
                    <input type="text" style="width: 300px; margin-left: 30px; border-radius: 5px;" id="create_content">
                </div>
                <div class="form-group row">
                    <label style="margin-left: 30px; font-weight: bold; width:100px;">Note</label>
                    <input type="text" style="width: 300px; margin-left: 30px; border-radius: 5px;" id="create_note">
                </div>              
                <div class="form-group row">
                    <button id="save" onclick="validateCreateORTMaterials();" style="margin-left: 190px; width: 80px;" type="button" class="btn btn-success">Save</button>
                    <button onclick="hidePopup('xmas-popup')" id="cancel" style="margin-left: 80px;width: 80px;" type="button" class="btn btn-danger">
                        Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>
    <div id="xmas-popup-assign1" class="popup" href="#">
        <div class="popup-content-assign1">
            <form id="editTransportationForm">
                <h1 style="text-align: center; margin-bottom: 40px;">Edit ORT Materials</h1>
                <input type="hidden" id="edit_ort_materials_id">              
                <div class="form-group row">
                    <label style="margin-left: 30px; font-weight: bold; width:100px;">Content:</label>
                    <input type="text" style="width: 300px; margin-left: 30px; border-radius: 5px;" id="edit_content">
                </div>
                <div class="form-group row">
                    <label style="margin-left: 30px; font-weight: bold; width:100px;">Note:</label>
                    <input type="text" style="width: 300px; margin-left: 30px; border-radius: 5px;" id="edit_note">
                </div>               
                <div class="form-group row">
                    <button id="save" onclick="validateEditORTMaterials();" style="margin-left: 190px; width: 80px;" type="button" class="btn btn-success">Save</button>
                    <button onclick="hidePopup('xmas-popup-assign1')" id="cancel" style="margin-left: 80px;width: 80px;" type="button" class="btn btn-danger">
                        Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    @Html.Raw(ISM.WebApp.Utils.PagingUtils.pager(Model.totalPage, Model.page, 3))
</div>

