@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;
@using ISM.WebApp.Constant;
@using ISM.WebApp.Utils
@{
    var sessionUser = JsonConvert.DeserializeObject<Account>(Context.Session.GetString(LoginConst.SessionKeyName));
    if (sessionUser.role_name == "Admin")
    {
        ViewData["Title"] = "Transportation Page";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else if (sessionUser.role_name == "Staff")
    {
        ViewData["Title"] = "Transportation Page";
        Layout = "~/Views/Shared/_StaffLayout.cshtml";
    }
}
@model ISM.WebApp.ViewModels.ORTMaterialSlideDetailViewModel
@*<div style="height: 500px; background-color: white;">*@
<h1 style="text-align: center;"> ORT Material/Slide For Student: @Model.current_student.account </h1>
<div style="height:50px">
    <div class="dropdown_search">
        <button onclick="search_visa()" style="width:80px;border-radius:10px" class="btn btn-primary">Search</button>
        <div id="myDropdown_search" class="dropdown-content_search" style="height: 400px; margin-top: 10px;">
            <form style="width: 320px;" id="searchForm" asp-controller="ORTMaterialSlide" asp-action="Detail" method="get">
                <div class="form-group row">
                    <label style="margin-left: 30px; font-weight: bold; width:100px;">Program</label>
                    <input name="program" type="text" style="width: 200px; border-radius: 5px;" id="" value="@Model.program">
                </div>
                <div class="form-group row">
                    <label style="margin-left: 30px; font-weight: bold; width:100px;">Content</label>
                    <input name="content" type="text" style="width: 200px; border-radius: 5px;" id="" value="@Model.content">
                </div>
                <div class="form-group row">
                    <label style="margin-left: 30px; font-weight: bold; width:100px;">Material</label>
                    <input name="material" type="text" style="width: 200px; border-radius: 5px;" id="" value="@Model.material">
                </div>
                <input type="hidden" name="student_id" value="@Model.current_student.user_id" />
                <input type="hidden" name="page" id="inputPage">
                <button id="searchBtn" type="submit" onclick="search(1);" class="btn btn-info" style="margin-left: 150px;">Search</button>
            </form>
        </div>
    </div>
</div>
<button onclick="showPopup('xmas-popup')" style="float: right; width:80px;border-radius:10px" class="btn btn-success">
    Create
</button>
<br>
<br>
<div class="table-scroll">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Program</th>
                <th scope="col">Content</th>
                <th scope="col">Material</th>
                <th> </th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.materials)
            {
                <tr>
                    <td>
                        @item.program
                    </td>
                    <td>
                        @item.content
                    </td>
                    <td>
                        @item.material
                    </td>
                    <td style="text-align: center;">
                        <button style="width:80px;border-radius:10px" onclick="EditORTMaterialSlide('@item.ort_material_slide_id','@item.program','@item.content','@item.material'); showPopup('xmas-popup-assign1');" class="btn btn-info">
                            Edit
                        </button>
                        <button style="width:80px;border-radius:10px" onclick="deleteORTMaterialSlide('@item.ort_material_slide_id')" class="btn btn-danger">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <!-- popup code -->
    <div id="xmas-popup" class="popup" href="#">
        <div class="popup-content" style="height:350px">
            <form>
                <h1 style="text-align: center; margin-bottom: 40px;">Create ORT Material/Slide</h1>
                <input type="hidden" id="create_student_id" value="@Model.current_student.user_id">
                <div class="form-group row">
                    <label style="margin-left: 30px; font-weight: bold; width:100px;">Program</label>
                    <input type="text" style="width: 300px; margin-left: 30px; border-radius: 5px;" id="create_program">
                </div>
                <div class="form-group row">
                    <label style="margin-left: 30px; font-weight: bold; width:100px;">Content:</label>
                    <input type="text" style="width: 300px; margin-left: 30px; border-radius: 5px;" id="create_content">
                </div>
                <div class="form-group row">
                    <label style="margin-left: 30px; font-weight: bold; width:100px;">Material</label>
                    <input type="text" style="width: 300px; margin-left: 30px; border-radius: 5px;" id="create_material">
                </div>
                <div class="form-group row">
                    <button id="save" onclick="validateCreateORTMaterialSlide();" style="margin-left: 190px; width: 80px;" type="button" class="btn btn-success">Save</button>
                    <button onclick="hidePopup('xmas-popup')" id="cancel" style="margin-left: 80px;width: 80px;" type="button" class="btn btn-danger">
                        Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>
    <div id="xmas-popup-assign1" class="popup" href="#">
        <div class="popup-content-assign1" style="height:350px">
            <form>
                <h1 style="text-align: center; margin-bottom: 40px;">Edit ORT Material/Slide</h1>
                <input type="hidden" id="edit_ort_material_slide_id">
                <div class="form-group row">
                    <label style="margin-left: 30px; font-weight: bold; width:100px;">Program:</label>
                    <input type="text" style="width: 300px; margin-left: 30px; border-radius: 5px;" id="edit_program">
                </div>
                <div class="form-group row">
                    <label style="margin-left: 30px; font-weight: bold; width:100px;">Content:</label>
                    <input type="text" style="width: 300px; margin-left: 30px; border-radius: 5px;" id="edit_content">
                </div>
                <div class="form-group row">
                    <label style="margin-left: 30px; font-weight: bold; width:100px;">Material:</label>
                    <input type="text" style="width: 300px; margin-left: 30px; border-radius: 5px;" id="edit_material">
                </div>
                <div class="form-group row">
                    <button id="save" onclick="validateEditORTMaterialSlide();" style="margin-left: 190px; width: 80px;" type="button" class="btn btn-success">Save</button>
                    <button onclick="hidePopup('xmas-popup-assign1')" id="cancel" style="margin-left: 80px;width: 80px;" type="button" class="btn btn-danger">
                        Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    @Html.Raw(ISM.WebApp.Utils.PagingUtils.pager(Model.totalPage, Model.page, 3))
</div>

