                    <label style="margin-left: 30px; font-weight: bold; width:100px;">Description:</label>
                    <input type="text" style="width:300px; margin-left:30px; border-radius:5px" id="edit_description">
                </div>
                <div class="form-group row">
                    <label style="margin-left: 30px; font-weight: bold; width:100px;">Fee:</label>
                    <input type="number" style="width:300px; margin-left:30px; border-radius:5px" id="edit_fee">
                </div>
                <div class="form-group row">
                    <label style="margin-left: 30px; font-weight: bold; width:100px;">Note:</label>
                    <input type="text" style="width:300px; margin-left:30px; border-radius:5px" id="edit_note">
                </div>
                <div class="form-group row">
                    <label style="margin-left: 30px; font-weight: bold; width:100px;">Picture:</label>
                    <input type="file" style="width:300px; margin-left:30px; border-radius:5px" id="edit_picture" value="Choose a picture" accept=".jpg,.jpeg,.png" onchange="validateFileType('edit_picture')">
                </div>
                <div class="form-group row">
                    <button onclick="validateEditCurrentAccomodation();" style="margin-left: 190px; width: 80px;" type="button"
                            class="btn btn-success" id="save">
                        Save
                    </button>
                    <button onclick="hidePopup('xmas-popup-assign')" style="margin-left: 80px;width: 80px;" type="button" class="btn btn-danger" id="cancel">
                        Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
