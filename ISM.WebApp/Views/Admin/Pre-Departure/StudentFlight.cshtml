@model ISM.WebApp.ViewModels.FlightIndexViewModel
@{
    ViewData["Title"] = "Admin Home Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="height: 500px; background-color: white;">
    <h1 style="text-align: center;">Student's Flights</h1>
    <div style="height: 50px;">
        <div class="dropdown_search">
            <button onclick="myFunction1()" style="background-color: red;" class="dropbtn_search">Search</button>
            <div id="myDropdown_search" class="dropdown-content_search" style="height: 400px; margin-top: 10px;">
                <form id="searchForm" asp-controller="Flight" asp-action="Index" method="get" style="width: 320px;">
                    <div class="form-group row">
                        <label style="margin-left: 30px; font-weight: bold; width:100px;">Account:</label>
                        <input type="text" name="account" style="width: 200px; border-radius: 5px;" id="" value="">
                    </div>
                    <div class="form-group row">
                        <label style="margin-left: 30px; font-weight: bold; width:100px;">Full Name:</label>
                        <input type="text" name="fullname" style="width: 200px; border-radius: 5px;" id="" value="">
                    </div>
                    <div class="form-group row">
                        <label style="margin-left: 30px; font-weight: bold; width:100px;">Start Date:</label>
                        <input type="date" name="startDate" style="width: 200px; border-radius: 5px;" id="" value="">
                    </div>
                    <div class="form-group row">
                        <label style="margin-left: 30px; font-weight: bold; width:100px;">Expiry Date:</label>
                        <input type="date" name="expiryDate" style="width: 200px; border-radius: 5px;" id="" value="">
                    </div>
                    <select name="degreeOrMobility" style="width:150px ; margin-left:40%">
                        @if (Model.degreeOrMobility.Equals("Degree"))
                        {
                            <option value="Degree" selected>Degree Student</option>
                            <option value="Mobility">Mobility Student</option>
                        }
                        else
                        {
                            <option value="Degree">Degree Student</option>
                            <option value="Mobility" selected>Mobility Student</option>
                        }
                    </select>
                    <input type="hidden" name="page" id="inputPage" />
                    <button id="searchButton" type="submit" onclick="search(1);" class="btn btn-info" style="margin-left: 150px;"> Search</button>
                </form>
            </div>
        </div>     
       
    </div>
    <br>
    <br>
    <div class="table-scroll">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">Account</th>
                    <th scope="col">Full Name</th>
                    <th scope="col">Flight Number Arrival</th>
                    <th scope="col">Arrival Date(in VietNam)</th>
                    <th scope="col">Arival Time (in VietNam) </th>
                    <th scope="col">Airport of Departure(Arrival) </th>
                    <th scope="col">Airport of Arrival </th>
                    <th scope="col">Picture of Arrival </th>
                    <th scope="col">Flight Number Departure</th>
                    <th scope="col">Departure Date (from VietNam) </th>
                    <th scope="col">Departure Time (from VietNam) </th>
                    <th scope="col">Airport of Departure(Departure) </th>
                    <th scope="col">Airport of Arrival(Departure) </th>
                    <th scope="col">Picture of Departure </th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
               @for(int i = 0; i < Model.flights.Count; i++)
               {
                <tr>
                    <td>
                        @Model.flights[i].account
                    </td>
                    <td>
                        @Model.flights[i].fullname
                    </td>
                    <td>
                        @Model.flights[i].flight_number_a
                    </td>
                    <td>
                        @Model.flights[i].arrival_date_a
                    </td>
                    <td>
                        @Model.flights[i].arrival_time_a
                    </td>
                    <td>
                        @Model.flights[i].airport_departure_a
                    </td>
                    <td>
                        @Model.flights[i].airport_arrival_a
                    </td>
                    <td>
                        @Model.flights[i].picture_a
                    </td>
                    <td>
                        @Model.flights[i].flight_number_d
                    </td>
                    <td>
                        @Model.flights[i].arrival_date_d
                    </td>
                    <td>
                        @Model.flights[i].arrival_time_d
                    </td>
                    <td>
                        @Model.flights[i].airport_departure_d
                    </td>
                    <td>
                        @Model.flights[i].airport_arrival_d
                    </td>
                    <td>
                        @Model.flights[i].picture_d
                    </td>

                    @{
                        var editedFlight = Json.Serialize(Model.flights[i]).ToString();
                    }
                    <td>
                        <button onclick="editFlight('@Model.flights[i].flight_id','@Model.flights[i].account','@Model.flights[i].fullname','@Model.flights[i].flight_number_a','@ISM.WebApp.Utils.FormatUtil.ToInputDate(Model.flights[i].arrival_date_a)','@ISM.WebApp.Utils.FormatUtil.ToInputTime(Model.flights[i].arrival_time_a)','@Model.flights[i].airport_departure_a','@Model.flights[i].airport_arrival_a','@Model.flights[i].picture_a','@Model.flights[i].flight_number_d','@ISM.WebApp.Utils.FormatUtil.ToInputDate(Model.flights[i].arrival_date_d)','@ISM.WebApp.Utils.FormatUtil.ToInputTime(Model.flights[i].arrival_time_d)','@Model.flights[i].airport_departure_d','@Model.flights[i].airport_arrival_d','@Model.flights[i].picture_d');">
                            <a href="#xmas-popup" style="text-decoration: none; color: white;">Edit</a>
                        </button>
                    </td>
                </tr>
               }
            </tbody>
        </table>

        <!-- popup code -->
        <div id="xmas-popup" class="popup" href="#">
            <div class="popup-content" style="height:500px">
                <form style="height:480px;overflow-x:hidden" class="table-scroll" id="editFlightForm" asp-controller="Flight" asp-action="Edit" method="post">
                    <h1 style="text-align: center; margin-bottom: 40px;">Edit Flight </h1>
                    <input type="hidden" id="edit_id" />
                    <div class="form-group row">
                        <label style="margin-left: 30px; font-weight: bold; width:100px;">Account:</label>
                        <input type="text" style="width: 300px; margin-left: 30px; border-radius: 5px;" id="edit_account" disabled>
                    </div>
                    <div class="form-group row">
                        <label style="margin-left: 30px; font-weight: bold; width:100px;">Full Name:</label>
                        <input type="text" style="width: 300px; margin-left: 30px; border-radius: 5px;" id="edit_fullname" disabled>
                    </div>
                    <div class="form-group row">
                        <label style="margin-left: 30px; font-weight: bold; width:100px;">Flight Number Arrival:</label>
                        <input type="text" style="width: 300px; margin-left: 30px; border-radius: 5px;" id="edit_flight_number_a">
                    </div>
                    <div class="form-group row">
                        <label style="margin-left: 30px; font-weight: bold; width:100px;">Arrival Date(in VietNam):</label>
                        <input type="date" style="width: 300px; height: 30px; margin-left: 30px; border-radius: 5px;" id="edit_arrival_date_a">
                    </div>
                    <div class="form-group row">
                        <label style="margin-left: 30px; font-weight: bold; width:100px;">Arival Time (in VietNam):</label>
                        <input type="time" style="width: 300px; height: 30px; margin-left: 30px; border-radius: 5px;" id="edit_arrival_time_a">
                    </div>
                    <div class="form-group row">
                        <label style="margin-left: 30px; font-weight: bold; width:100px;">Airport of Departure(Arrival):</label>
                        <input type="text" style="width: 300px; margin-left: 30px; border-radius: 5px;" id="edit_airport_departure_a">
                    </div>
                    <div class="form-group row">
                        <label style="margin-left: 30px; font-weight: bold; width:100px;">Airport of Arrival:</label>
                        <input type="text" style="width: 300px; margin-left: 30px; border-radius: 5px;" id="edit_airport_arrival_a">
                    </div>
                    <div class="form-group row">
                        <label style="margin-left: 30px; font-weight: bold; width:100px;">Picture of Arrival:</label>
                        <input type="text" style="width: 300px; margin-left: 30px; border-radius: 5px;" id="edit_picture_a">
                    </div>
                    <div class="form-group row">
                        <label style="margin-left: 30px; font-weight: bold; width:100px;">Flight Number Departure:</label>
                        <input type="text" style="width: 300px; margin-left: 30px; border-radius: 5px;" id="edit_flight_number_d">
                    </div>
                    <div class="form-group row">
                        <label style="margin-left: 30px; font-weight: bold; width:100px;">Departure Date (from VietNam):</label>
                        <input type="date" style="width: 300px; height: 30px; margin-left: 30px; border-radius: 5px;" id="edit_arrival_date_d">
                    </div>
                    <div class="form-group row">
                        <label style="margin-left: 30px; font-weight: bold; width:100px;">Departure Time (from VietNam) :</label>
                        <input type="time" style="width: 300px; height: 30px; margin-left: 30px; border-radius: 5px;" id="edit_arrival_time_d">
                    </div>
                    <div class="form-group row">
                        <label style="margin-left: 30px; font-weight: bold; width:100px;">Airport of Departure(Departure):</label>
                        <input type="text" style="width: 300px; margin-left: 30px; border-radius: 5px;" id="edit_airport_departure_d">
                    </div>
                    <div class="form-group row">
                        <label style="margin-left: 30px; font-weight: bold; width:100px;">Airport of Arrival(Departure):</label>
                        <input type="text" style="width: 300px; margin-left: 30px; border-radius: 5px;" id="edit_airport_arrival_d">
                    </div>
                    <div class="form-group row">
                        <label style="margin-left: 30px; font-weight: bold; width:100px;">Picture of Departure:</label>
                        <input type="text" style="width: 300px; margin-left: 30px; border-radius: 5px;" id="edit_picture_d">
                    </div>
                    <div class="form-group row">
                        <button onclick="validateEditFlight();" style="margin-left: 190px; width: 80px;" type="button" class="btn btn-success">Save</button>
                        <button style="margin-left: 80px;width: 80px;" type="button" class="btn btn-danger">
                            <a style="text-decoration: none; color: white;" href="#">Cancel</a>
                        </button>
                    </div>
                </form>
            </div>



        </div>
    </div>
    <div style="margin-top: 20px;">
       
        <i class="fa fa-asterisk" aria-hidden="true" style="float: right;">
            <button class="btn btn-danger">Set Up Notification</button>

        </i>

    </div>




</div>

<script>
    function myFunction1() {
        document.getElementById("myDropdown_search").classList.toggle("show_search_insurance");
    }
    function filterFunction() {
        var input, filter, ul, li, a, i;
        input = document.getElementById("myInput");
        filter = input.value.toUpperCase();
        div = document.getElementById("myDropdown_search");
        a = div.getElementsByTagName("a");
        for (i = 0; i < a.length; i++) {
            txtValue = a[i].textContent || a[i].innerText;
            if (txtValue.toUpperCase().indexOf(filter) > -1) {
                a[i].style.display = "";
            } else {
                a[i].style.display = "none";
            }
        }
    }
</script>

