@model ISM.WebApp.ViewModels.ArticleListViewModel
@{
    ViewData["Title"] = "Admin Home Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 style="text-align: center;">@Model.type</h1>
<div style="height:50px">
    <button class="btn btn-success" style="float:right">
        <a style="text-decoration:none; color:white" href="#xmas-popup">Create</a>
    </button>
</div>

@foreach (var item in Model.articles)
{
    <a asp-controller="Article" asp-action="Index" asp-route-id="@item.article_id" asp-route-type="">@item.title</a>
    <br />
}
<div id="xmas-popup" class="popup" href="#">
    <div class="popup-content" style="height:300px">
        <form>
            <h1 style="text-align: center; margin-bottom: 40px;">Create Article</h1>
            <div class="form-group row">
                <label style="margin-left: 30px; font-weight: bold; width:100px;">Title:</label>
                <input type="text" style="width: 300px; margin-left: 30px; border-radius: 5px;" id="">
            </div>
            <div class="form-group row">
                <label style="margin-left: 30px; font-weight: bold; width:100px;">File:</label>
                <input style="width: 300px; margin-left: 30px; border-radius: 5px;" type="file">
            </div>
            <div class="form-group row">
                <button style="margin-left: 190px; width: 80px;" type="button" class="btn btn-success" id="save">Save</button>
                <button style="margin-left: 80px;width: 80px;" type="button" class="btn btn-danger" id="cancel">
                    <a style="text-decoration: none; color: white;" href="#">Cancel</a>
                </button>
            </div>
        </form>
    </div>
</div>
